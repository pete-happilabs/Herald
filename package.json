{
  "name": "herald",
  "version": "1.0.0",
  "description": "Production-grade multi-tenant messaging service with DLT",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "worker": "node src/worker.js",
    "dlt": "node src/dlt/index.js",
    "dev": "nodemon src/server.js",
    "dev:worker": "nodemon src/worker.js",
    "dev:dlt": "nodemon src/dlt/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart"
  },
  "keywords": [
    "messaging",
    "multi-tenant",
    "email",
    "sms",
    "notification",
    "microservice",
    "dlq",
    "dead-letter-queue"
  ],
  "author": "Herald Team",
  "license": "MIT",
  "dependencies": {
    "fastify": "^4.25.2",
    "@fastify/cors": "^8.5.0",
    "bull": "^4.12.0",
    "opossum": "^8.1.0",
    "bottleneck": "^2.19.5",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "axios": "^1.6.5",
    "aws-sdk": "^2.1524.0",
    "nodemailer": "^6.9.8",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
